# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Models - Primary (AIML API - supports Claude, Perplexity, Flux)
# Get your API key from https://aimlapi.com
AIML_API_KEY=your-aiml-api-key

# AI Models - Alternative (fallback if AIML_API_KEY is not set)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# AI Models - Image Generation
REPLICATE_API_KEY=your-replicate-api-key

# Unsplash (fallback for image generation)
# Get your access key from https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Pixabay (free stock images for news articles)
# Get your API key from https://pixabay.com/api/docs/
PIXABAY_API_KEY=your-pixabay-api-key

# Pexels (alternative stock images)
# Get your API key from https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-api-key

# AI Models - Video Generation
LUMA_API_KEY=your-luma-api-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Social Media - Later.dev (formerly Late.dev)
# Get your API key from https://getlate.dev/dashboard/api
LATE_API_KEY=your-late-api-key

# Cron Jobs
# Generate a secure random string: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# DataForSEO API (optional, for keyword research data)
# Get credentials at https://app.dataforseo.com/api-access
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# Stripe (for credit-based pricing)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# WordPress Proxy (optional)
# Use a proxy to bypass IP blocking by hosting providers
# Format: http://username:password@proxy-host:port
# Example: http://user:pass@your-vps-ip:3128
# See PROXY_SETUP_GUIDE.md for setup instructions
WORDPRESS_PROXY_URL=

# VPS Terminal Access (voor AI Agent command execution)
VPS_HOST=your-vps-ip-or-domain
VPS_PORT=22
VPS_USER=your-vps-username
VPS_PASSWORD=your-vps-password
# Of gebruik SSH key (pad naar private key file)
VPS_SSH_KEY_PATH=
VPS_SSH_PASSPHRASE=
