# Database Configuration
# PostgreSQL connection string (for Prisma)
DATABASE_URL="postgresql://username:password@localhost:5432/writgo_db?schema=public"

# Supabase Configuration (recommended for production)
# Create a project at https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Feature flag to switch from Prisma to Supabase
# Set to "true" when ready to migrate
USE_SUPABASE="false"

# NextAuth Configuration
# URL where the app is hosted
NEXTAUTH_URL="http://localhost:3000"
# Secret for JWT encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# AIML API Configuration
# Sign up at: https://aimlapi.com/
# Used for Claude AI and image generation
AIML_API_KEY="your-aiml-api-key-here"
AIML_API_BASE_URL="https://api.aimlapi.com/v1"
AIML_API_URL="https://api.aimlapi.com/v1"

# AWS S3 Configuration (voor file uploads)
# Create bucket in AWS Console
AWS_BUCKET_NAME="your-s3-bucket-name"
AWS_FOLDER_PREFIX="uploads/"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-1"

# Stripe Configuration (Payment Processing)
# Sign up at: https://stripe.com/
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
STRIPE_STARTER_PRICE_ID="your-starter-price-id"
STRIPE_PRO_PRICE_ID="your-pro-price-id"
STRIPE_ENTERPRISE_PRICE_ID="your-enterprise-price-id"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID="your-starter-price-id"
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID="your-pro-price-id"
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID="your-enterprise-price-id"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_USER="your-email@gmail.com"

# Email IMAP Configuration (Optional - for email monitoring)
EMAIL_IMAP_HOST="imap.gmail.com"
EMAIL_IMAP_PORT="993"
EMAIL_PASSWORD="your-app-password"
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT="587"

# Google Search Console OAuth
# Set up in: https://console.cloud.google.com/
GOOGLE_SEARCH_CONSOLE_CLIENT_ID="your-client-id"
GOOGLE_SEARCH_CONSOLE_CLIENT_SECRET="your-client-secret"

# Bol.com Partner API (Optional - voor affiliate links)
# Sign up at: https://partnerprogramma.bol.com/
BOLCOM_CLIENT_ID="your-bolcom-client-id"
BOLCOM_CLIENT_SECRET="your-bolcom-client-secret"

# DataForSEO API (Legacy - optioneel)
# Sign up at: https://dataforseo.com/
DATAFORSEO_USERNAME="your-dataforseo-username"
DATAFORSEO_PASSWORD="your-dataforseo-password"

# Additional API Keys (Optional - enable extra features)
# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# Image APIs
PIXABAY_API_KEY="your-pixabay-api-key"
PEXELS_API_KEY="your-pexels-api-key"
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# Video/Audio APIs
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
RUNWAY_API_KEY="your-runway-api-key"
RUNWAY_ML_API_KEY="your-runway-ml-api-key"
LUMA_API_KEY="your-luma-api-key"
VADOO_API_KEY="your-vadoo-api-key"

# Social Media APIs
LATE_DEV_API_KEY="your-late-dev-api-key"
GETLATE_API_KEY="your-getlate-api-key"
AYRSHARE_API_KEY="your-ayrshare-api-key"

# AI/Analytics APIs
ABACUSAI_API_KEY="your-abacusai-api-key"
ORIGINALITY_API_KEY="your-originality-api-key"
ZEROGPT_API_KEY="your-zerogpt-api-key"

# Security & Cron
CRON_SECRET="your-cron-secret-here"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
