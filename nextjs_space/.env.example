# ==========================================
# WRITGO AI - ENVIRONMENT VARIABLES
# ==========================================
# Kopieer dit bestand naar .env en vul je eigen credentials in
# BELANGRIJK: Deel .env NOOIT publiekelijk!

# ==========================================
# DATABASE - SUPABASE
# ==========================================
# Get these from Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==========================================
# NEXTAUTH AUTHENTICATIE
# ==========================================
# Genereer een geheime sleutel met: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# ==========================================
# MONEYBIRD API - FACTURATIE & ABONNEMENTEN
# ==========================================
# Nederlandse boekhoudsoftware voor facturatie, abonnementen en BTW
# API Token: https://moneybird.com/user/applications/new
MONEYBIRD_ACCESS_TOKEN=your-personal-api-token-or-oauth-token
MONEYBIRD_ADMINISTRATION_ID=your-administration-id

# Moneybird Product IDs (maak deze aan in Moneybird dashboard)
# Voor abonnementen: WritgoAI Basis, Professional, Business, Enterprise
MONEYBIRD_PRODUCT_BASIS_ID=product-id-for-basis
MONEYBIRD_PRODUCT_PROFESSIONAL_ID=product-id-for-professional
MONEYBIRD_PRODUCT_BUSINESS_ID=product-id-for-business
MONEYBIRD_PRODUCT_ENTERPRISE_ID=product-id-for-enterprise

# Moneybird Tax & Ledger IDs (haal op via API of dashboard)
MONEYBIRD_TAX_RATE_21_ID=tax-rate-id-for-21-percent
MONEYBIRD_TAX_RATE_9_ID=tax-rate-id-for-9-percent
MONEYBIRD_TAX_RATE_0_ID=tax-rate-id-for-0-percent
MONEYBIRD_REVENUE_LEDGER_ID=ledger-account-id-for-revenue

# Moneybird Webhook Token (voor webhook verificatie)
# Endpoint URL: https://jouw-domein.nl/api/moneybird/webhook
MONEYBIRD_WEBHOOK_TOKEN=your-webhook-verification-token

# ==========================================
# AWS S3 CLOUD STORAGE
# ==========================================
# Voor file uploads (facturen, afbeeldingen, etc.)
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER_PREFIX=writgo/

# ==========================================
# CRON JOB BEVEILIGING
# ==========================================
# Voor automatische payment reminders
CRON_SECRET=your-random-cron-secret-key

# ==========================================
# AIML API - 400+ AI MODELLEN
# ==========================================
# Voor AI Agent Terminal en advanced AI features
# Sign up: https://aimlapi.com
AIML_API_KEY=your-aiml-api-key
AIML_API_URL=https://api.aimlapi.com/v1

# ==========================================
# SMTP EMAIL CONFIGURATIE
# ==========================================
# Voor het versturen van emails (welkomst, wachtwoord reset, etc.)
SMTP_HOST=writgoai.nl
SMTP_PORT=587
SMTP_USER=info@writgoai.nl
SMTP_PASS=your-smtp-password
SMTP_SECURE=false

# ==========================================
# EMAIL IMAP CONFIGURATIE (voor inbox sync)
# ==========================================
# Voor het ophalen van emails via IMAP
IMAP_HOST=mail.writgo.nl
IMAP_PORT=993
IMAP_USER=info@writgo.nl
IMAP_PASSWORD=your_imap_password_here
IMAP_TLS=true

# Email sync interval (minutes) - used by cron
EMAIL_SYNC_INTERVAL=5

# Email AI analysis credits cost (per email)
EMAIL_AI_ANALYSIS_CREDITS=5

# ==========================================
# OPTIONELE VARIABLES
# ==========================================

# Abacus AI (voor LLM features)
# ABACUSAI_API_KEY=your-abacus-api-key

# Voor productie
# NODE_ENV=production